#progress {
	width: 96%;
	background-color: grey;
	position: absolute;
	top: 50%;
	left: 0;
	transform: translate(0, -50%);
}

#bar {
	width: 0%;
	height: 10px;
	background-color: green;
}
.swiper-container {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
}
.swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    height: 100%;
    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.swiper-slide img{
  	width:  100%;
  	height: 100vh;
}
.wrap {width: 100%; height: 100%; position: relative; overflow: hidden;display: flex; flex:1;}