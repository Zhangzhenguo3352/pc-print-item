	$(document).on('click','.back',function(ev){
		if(!!isUSB) leftListDataFn(getListURL, `${parentDir == null ? '' : parentDir}`)
	})
	$(document).on('click','.refresh',function(ev){
		leftListDataFn(getListURL)
	})

