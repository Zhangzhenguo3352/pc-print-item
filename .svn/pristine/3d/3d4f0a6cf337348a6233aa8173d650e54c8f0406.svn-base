#progress {
	width: 96%;
	background-color: grey;
	position: absolute;
	top: 50%;
	left: 0;
	transform: translate(0, -50%);
}

#bar {
	width: 0%;
	height: 10px;
	background-color: green;
}

.swiper-container {
	width: 100%;
	height: 100%;
	margin-left: auto;
	margin-right: auto;
}

.swiper-slide {
	text-align: center;
	font-size: 18px;
	background: #fff;
	height: 100%;
	/* Center slide text vertically */
	display: -webkit-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	-webkit-justify-content: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	-webkit-align-items: center;
	align-items: center;
}

.swiper-slide img {
	width: 100%;
	height: 100vh;
}

.wrap {
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
	display: flex;
	flex: 1;
}

.loadingBOX {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 74px;
	background-color: rgba(49, 49, 49, 0.4);
	line-height: 73px;
	z-index: 100;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
}

.loadingBOX .flex {
	font-size: 24px;
	color: red;
	float: left;
	padding-left: 30px;
	padding-right: 30px;
}

.loadingBOX .flex>span {
	float: left;
}

.loadingBOX .flex>span:nth-of-type(1) {
	
}

.loadingBOX .flex>span:nth-of-type(2) {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.loadingBOX .articleBox {
	-webkit-box-flex: 1;
	-ms-flex: 1;
	flex: 1;
	min-width: 600px;
	overflow: hidden;
	float: left;
	position: relative;
}

.loadingBOX .articleBox>div.left {
	float: left;
	width: 80%;
	height: 16px;
	/*background-color: #fff;*/
	border-radius: 10px;
	position: relative;
	margin-top: 44px;
	border: 10px solid #fff;
}

.loadingBOX .articleBox>div.left>div {
	height: 6px;
	/*background-color: #f05537;*/
	border-radius: 10px;
	position: absolute;
	-webkit-transform: translate(0, -50%);
	transform: translate(0, -50%);
	top: 50%;
	left: 0;
}

.loadingBOX .articleBox>div.left>div>div {
	position: absolute;
	right: -9px;
	top: -6px;
	height: 18px;
	width: 18px;
	/*background-color: #fff;*/
	box-shadow: 1px 1px 5px #ccc, -1px -1px 5px rgba(49, 49, 49, 0.5), 1px 0px 5px rgba(49, 49, 49, 0.5), 0px 1px 5px
		rgba(49, 49, 49, 0.5);
	border-radius: 50%;
}

.loadingBOX .articleBox .right {
	width: 20%;
	float: left;
	font-size: 26px;
	position: relative;
	color: red;
	padding-left: 20px;
}